# aliases

# handy function to check if a command
# exits
exists () {
  type $1 > /dev/null 2>&1
  if [ "$?" -eq "0" ]; then
    echo 0 # found
  else
    echo 1 # not found
  fi
}

# open file as if in file browser
if [ $(exists xdg-open) -eq 0 ]; then
  alias open='xdg-open'
fi

# listing 
alias ls='ls --color=auto'
alias ll='ls -AlF'
alias la='ls -A'
alias l='ls -CF'

# vim
alias vi='vim'
alias svi='sudo -E vim'
alias vimrc='vim ~/.vimrc'

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# sudo, keep environment
alias s='sudo -E'

# safe rm, because i can't trust myself
if [ $(exists gvfs-rm) -eq 0 ]; then
  alias rm='gvfs-trash'
else
  mkdir -p ~/.trash
  alias rm='mv -t ~/.trash --backup=t'
fi

# pacman shortcuts
alias pac='sudo pacman' # sudo pacman command
alias pacin='pac -S'    # install from repo
alias pacins='pac -U'   # install from file
alias pacrem='pac -Rns' # remove package
alias pacre='pac -R'    # remove keep config
alias paccl='pac -Sc'   # clean package cache
# before upgrade, need to update keyring
alias pacupg='pacin archlinux-keyring --noconfirm && pac -Syu' # upgrade

# git shortcuts
alias gs='git status -s -b'
alias gd='git diff'
alias gc='git checkout'
alias go='git commit'
alias gl='git log --oneline --decorate --graph'

# tmux
alias tmux='TERM=screen-256color-bce tmux'

# better cp, if available
if [ $(exists rsync) -eq 0 ]; then
  alias cp='rsync -a --progress'
fi

# handy systemd shortcuts
if [ $(exists systemctl) -eq 0 ]; then
  alias ctl='sudo systemctl'
  alias rctl='sudo systemctl daemon-reload'
fi

# docker aliases
alias docker='sudo docker'
