# aliases

# open file as if in file browser
alias o='xdg-open'

# listing 
alias ls='ls --color=auto'
alias ll='ls -AlF'
alias la='ls -A'
alias l='ls -CF'

# vim
alias vi='vim'
alias svi='sudo -E vim'
alias vimrc='vim ~/.vimrc'

alias p='feh -F -Z'

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# sudo
alias s='sudo -E'

# safe rm
alias rm='mv -t ~/.local/share/Trash/files --backup=t'

# pacman 
alias pacupg='sudo pacman -Syu' # upgrade
alias pacin='sudo pacman -S'    # install from repo
alias pacins='sudo pacman -U'   # install from file
alias pacrem='sudo pacman -Rns' # remove package 
alias pacre='sudo pacman -R'    # remove keep config
alias paccl='sudo pacman -Sc'   # clean package cache

# git
alias gs='git status -s -b'
alias gd='git diff'
alias gc='git checkout'
alias go='git commit'
alias gl='git log --oneline --decorate --graph'

# tmux
alias tmux='TERM=screen-256color-bce tmux'
alias rand='mpd && mpc ls | mpc add && mpc play'

# better cp
alias cp='rsync -a --progress'
